@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";

}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/User/lib/bootstrap/dist/css/cssfile.css">
    <title>SIGN UP - Compare Bazaar</title>
    <script src="https://kit.fontawesome.com/0ee938b2d7.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class=" position-absolute top start-50 translate-middle ">
        <h1 class="text-center fw-bold  text-red ">WELCOME TO COMPAREBAZAAR</h1>
    </div>
    <div class="modal-dialog position-absolute top-50 start-50 translate-middle z-index ">
        <div class="modal-content  ">
            <div class=" p-3 pb-2 border-bottom-0">
                <!-- <h3 class="fw-bold mb-2 text-center">Welcome to COMPAREBAZAAR</h3> -->
                <h3 class=" mb-0 fw-bold text-center ">SIGN UP</h3>
                <!-- <button type="button" class="btn-close ms-3" data-bs-dismiss="modal" aria-label="Close"></button>  -->
            </div>
            <div class="model-body m-1">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class=" col-auto form-floating mb-3 ">
                            <input asp-for="Input.FirstName" type="text" class="form-control form-control-sm rounded-0 border-0 border-bottom-red shadow-none " id="floatingName" placeholder="First Name">
                            <label asp-for="Input.FirstName" for="floatingName" class="text-red "><i class="fas fa-user ms-1"></i> First Name</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class=" col-auto form-floating mb-3">
                            <input asp-for="Input.LastName" type="text" class="form-control form-control-sm rounded-0 border-0 border-bottom-red shadow-none" id="floatingName" placeholder="Last Name">
                            <label asp-for="Input.LastName" for="floatingName" class="text-red"><i class="fas fa-user ms-1"></i> Last Name</label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- <div class="  form-floating mb-3">
                      <input type="number" class="form-control form-control-sm rounded-0  border-0 border-bottom-red" id="floatingInput" placeholder="Phone Number">
                      <label for="floatingInput" class="text-red"><i class="fas fa-phone-alt"></i>   Phone Number</label>
                    </div> -->
                    <div class="row">

                        <div class="  col-lg-12 col-md-12 col-sm-12  form-floating mb-3">
                            <input asp-for="Input.Email" type="email" class="form-control form-control-sm rounded-0 border-0 border-bottom-red shadow-none" id="floatingInput" placeholder="Email Address">
                            <label asp-for="Input.Email" for="floatingInput" class="text-red">  <i class="fas fa-envelope ms-1"></i> Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">

                        <div class=" col-lg-12 col-md-12 col-sm-12 form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control form-control-sm rounded-0 border-0 border-bottom-red shadow-none" id="floatingPassword" placeholder="Password">
                            <label asp-for="Input.Password" for="floatingPassword" class="text-red"><i class="fas fa-key ms-1"></i>Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">

                        <div class="  col-lg-12 col-md-12 col-sm-12  form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-sm rounded-0  border-0  border-bottom-red shadow-none" id="floatingPassword" placeholder="Confirm Password">
                            <label asp-for="Input.ConfirmPassword" for="floatingPassword " class="text-red"><i class="fas fa-key ms-1 "></i> Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">

                        <div class="  text-center mb-3">
                            Already have account ? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">LOGIN</a>
                        </div>
                    </div>
                    <div class="row">

                        <div class="text-center mb-3">
                            <button type="submit" class=" col-6 btn btn-outline-danger text-red btncolor ms-3 px-3 shadow-none">SIGNUP</button>
                        </div>
                    </div>

                </form>
                <div class="row">

                    <div class="   text-center fs-4 fw-bold mb-3">OR</div>
                </div>
                <div class="row">

                    <div class=" text-center mb-3  ">
                        <i class="fab fa-facebook p-2 m-1 fs-3 text-white bg-darkblue rounded-circle pointer"></i>
                        <i class="fab fa-google p-2 bg-googlered  text-white fs-3 m-1 rounded-circle pointer "></i>
                        <i class="fab fa-twitter p-2 m-1 fs-3 text-white bg-lightblue rounded-circle pointer"></i>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div>
        <img src="~/User/images/background4.jpg" class="bgimage opacity-25 " alt="">
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/docs/5.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
