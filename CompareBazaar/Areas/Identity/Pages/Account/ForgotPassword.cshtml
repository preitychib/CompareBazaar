@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your Password";
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
   
}



<section class="s2">
    <div class=" container-fluid  ">
        <div class="modal-dialog position-absolute top-50 start-50 translate-middle z-index boxwidth ">
            <div class="modal-content  ">
                <div class=" p-3 pb-2 border-bottom-0">
                    <!-- <h3 class="fw-bold mb-2 text-center ">Welcome to COMPAREBAZAAR</h3> -->
                    <h2 class=" mb-0 fw-bold text-center ">Forgot your password?</h2>
                    <p class="fs-6 my-2">Don't worry! Just fill your email and we'll send you a link to reset your password.</p>
                    <!-- <button type="button" class="btn-close ms-3" data-bs-dismiss="modal" aria-label="Close"></button>  -->
                </div>
                <div class="model-body m-1">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="  col-lg-12 col-md-12 col-sm-12  form-floating mb-3">
                                <input asp-for="Input.Email" type="email" class="form-control form-control-sm rounded-0 border-0 border-bottom-red shadow-none" id="floatingInput" placeholder="Email Address">
                                <label asp-for="Input.Email" for="floatingInput" class="text-red">  <i class="fas fa-envelope ms-1"></i> Email Address</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="text-center mb-3">
                                <button href="" class=" col-6 btn btn-outline-danger text-red btncolor ms-3 px-3 shadow-none">Reset Password</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="s3">
