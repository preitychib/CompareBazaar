
@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    //  var returnUrl = ViewData["ReturnUrl"] as string;
    //@System.Net.WebUtility.UrlEncode(returnUrl)"
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/User/lib/bootstrap/dist/css/cssfile.css">
    <title>Login -Comapre Bazaar</title>
    <!-- <script src="https://kit.fontawesome.com/0ee938b2d7.js" crossorigin="anonymous"></script> -->
    <link rel="stylesheet" href="~/User/lib/bootstrap/dist/fontawesome-free-6.0.0-web/css/all.css">
</head>

<body>
    <section class="s1">
        <div class=" container-fluid  ">
            <div class=" position-absolute  top-1 start-50 translate-middle ">
                <h1 class="text-center  fw-bold  text-red ">WELCOME TO COMPAREBAZAAR</h1>
            </div>
        </div>
    </section>
    <section class="s2">
        <div class=" container-fluid  ">
            <div class="modal-dialog position-absolute top-50 start-50 translate-middle z-index boxwidth">
                <div class="modal-content  ">
                    <div class=" p-3 pb-2 border-bottom-0">
                        <!-- <h3 class="fw-bold mb-2 text-center">Welcome to COMPAREBAZAAR</h3> -->
                        <h3 class=" mb-0 fw-bold text-center ">LOGIN</h3>
                    </div>
                    <div class="model-body m-1">
                        <form id="account" method="post">

                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating mb-3">
                                    <input type="email" asp-for="Input.Email" class="form-control form-control-sm rounded-0 border-0 border-bottom-red shadow-none" id="floatingInput" placeholder="Email Address">
                                    <label asp-for="Input.Email" for="floatingInput" class="text-red"> <i class="fas fa-envelope ms-1"></i> Email Address</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class=" form-floating mb-3">
                                    <input asp-for="Input.Password" type="password" class="form-control form-control-sm rounded-0 border-0 border-bottom-red shadow-none" id="floatingPassword" placeholder="Password">
                                    <label asp-for="Input.Password" for="floatingPassword" class="text-red"><i class="fas fa-key ms-1"></i>Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row">
                             
                                    <label class="checkbox fs-6 mb-3 ms-2" asp-for="Input.RememberMe">
                                        <input type="checkbox"  asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                              
                                
                            </div>
                            <div class="text-center mb-3">
                                Don't have an account ?
                                <a asp-page="./Register" class="text-decoration-none" asp-route-returnUrl="@Model.ReturnUrl">SIGNUP</a>
                            </div>
                            <div class="row">

                                <div class="text-center mb-3">
                                    <button type="submit" class=" col-6 btn btn-outline-danger text-red btncolor ms-3 px-3 shadow-none">LOGIN</button>
                                </div>
                            </div>

                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="s3">
         <img src="~/User/images/background4.jpg" class="bgimage img-fluid opacity-25 " alt="Backgroung Image"> 
        @*<div class="bgimage opacity-25 img-fluid" style="background-image: url('images/background4.jpg');">
        </div>*@
    </section>
    
</body>

</html>
