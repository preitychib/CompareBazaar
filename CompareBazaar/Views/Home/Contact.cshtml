@model CompareBazaar.Models.Contact
@{
    ViewData["Title"] = "Contact Us";
    ViewBag.HideNavBar = true;
}
<section class="s2">
    <div class=" container-fluid  ">
        <div class="modal-dialog position-absolute top-50 start-50 translate-middle z-index boxwidth ">
            <div class="modal-content  ">
                <div class=" p-3 pb-2 border-bottom-0">
                    <!-- <h3 class="fw-bold mb-2 text-center ">Welcome to COMPAREBAZAAR</h3> -->
                    <h3 class=" mb-0 fw-bold text-center ">CONTACT US</h3>
                    <!-- <button type="button" class="btn-close ms-3" data-bs-dismiss="modal" aria-label="Close"></button>  -->
                </div>
                <div class="model-body m-1">
                    <form asp-action="Contact">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class=" col col-xxs-12 form-floating mb-3   ">
                                <input asp-for="FirstName" type="text" class="form-control form-control-sm rounded-0 border-0 border-bottom-red shadow-none " id="floatingFName" placeholder="First Name">
                                <label asp-for="FirstName" class="text-red "><i class="fas fa-user ms-1"></i> First Name</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class=" col col-xxs-12 form-floating mb-3">
                                <input asp-for="LastName" type="text" class="form-control form-control-sm rounded-0 border-0 border-bottom-red shadow-none" id="floatingLName" placeholder="Last Name">
                                <label asp-for="LastName" class="text-red"><i class="fas fa-user ms-1"></i> Last Name</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="  col-lg-12 col-md-12 col-sm-12  form-floating mb-3">
                                <input asp-for="EmailAddress" type="email" class="form-control form-control-sm rounded-0 border-0 border-bottom-red shadow-none" id="floatingInput" placeholder="Email Address">
                                <label asp-for="EmailAddress" class="text-red">  <i class="fas fa-envelope ms-1"></i> Email Address</label>
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="  col-lg-12 col-md-12 col-sm-12  form-floating mb-3">
                                <input asp-for="Message" class="form-control form-control-sm  rounded-0 border-0 border-bottom-red shadow-none" placeholder="Tell us what you need help with" id="floatinghelp" style="height: 100px" />
                                <label asp-for="Message" class="text-red ">  <i class="fa-solid fa-comments ms-1"></i> Tell us what you need help with</label>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="text-center mb-3">
                                <input type="submit" value="GET HELP" class=" col-6 btn btn-outline-danger text-red btncolor ms-3 px-3 shadow-none"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="s3">
    <img src="~/User/images/background4.jpg" class="bgimage img-fluid opacity-25 " alt="Backgroung Image">
    @*<div class="bgimage opacity-25 img-fluid" style="background-image: url('~/User/images/background4.jpg');"/>*@

</section>

