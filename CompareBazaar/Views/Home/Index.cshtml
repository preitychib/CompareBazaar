<section id="section4" class="bg-black py-5">
    <div class="container">
        <h2 class="text-center mb-5 text-red fw-bold"> Compare Chart </h2>
        <div class="row mb-5 ">
            <div class="  col-lg-4 col-md-4 col-sm-6 col ">
                <div class="card shadow-sm compare-1 d-flex align-items-center justify-content-center  ">
                    <a href="" class="mt-4"><i class="fas fa-search-plus text-red searchproduct-1"></i> </a>
                    <form class="d-flex  mx-2 mt-4">
                        <input type="search" placeholder="Search products" class="form-control radius shadow-none comparesearch-1 " 

                               aria-label="Search">
                        
                        <a type="submit" class="btn btn-link searchcolor bg-red text-white radius shadow-none" href="#">
                            <i class="fas fa-search"></i>
                        </a>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 col-md-4  col-sm-6 col  ">
                <div class="card shadow-sm compare-1 d-flex align-items-center justify-content-center ">
                    <a href="" class="mt-4"><i class="fas fa-search-plus text-red searchproduct-1"></i> </a>
                    <form class="d-flex  mx-2 mt-4">
                        <input type="search" placeholder="Search products" class="form-control radius shadow-none comparesearch-1 "
                               aria-label="Search">
                        <a type="submit" class="btn btn-link searchcolor bg-red text-white radius shadow-none" href="#">
                            <i class="fas fa-search"></i>
                        </a>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 col-md-4  col-sm-6 col comparehide ">
                <div class="card shadow-sm compare-1 d-flex align-items-center justify-content-center  ">
                    <a href="" class="mt-4"><i class="fas fa-search-plus text-red searchproduct-1"></i> </a>
                    <form class="d-flex  mx-2 mt-4">
                        <input type="search" placeholder="Search products" class="form-control radius shadow-none comparesearch-1 "
                               aria-label="Search">
                        <a type="submit" class="btn btn-link searchcolor bg-red text-white radius shadow-none" href="#">
                            <i class="fas fa-search"></i>
                        </a>
                    </form>
                </div>
            </div>
          
        </div>
        <div>
            <div class="d-flex align-items-center justify-content-center">
                <a class="btn btn-danger redbtn bg-red col-4 shadow-none" asp-controller="" asp-action="CompareChart" >
                    COMPARE NOW
                </a>
            </div>
        </div>
    </div>
</section>
<section id="section5">
    <div class="container my-5 ">
        <h3 class="text-center my-3 text-red fw-bold"> Popular Products </h3>
        <div class="row">
            <div class="owl-carousel owl-theme" id="owl-carousel2">
                @foreach (var item in ViewBag.mobiles.results)
                {
                    <div class="item">
                        <div class=" border rounded  d-flex ">
                            <div class=" d-flex align-items-center  ">
                                <img src="@item.product_images.image" class="flex-shrink-0  imagesize m-3" alt="...">
                            </div>
                            <div class="mt-3">
                                <a href="/home/ProductDetails/?vendor=@item.vendor.name&id=@item.id" class=" text-decoration-none text-dark fw-bold  ">@item.name</a>

                                <br>
                                <a href="/home/ProductDetails/?vendor=@item.vendor.name&id=@item.id" class=" text-decoration-none text-red fw-bold ">Rs @item.price</a>
                                <a href="/home/CompareChart/?vendor=@item.vendor.name&id=@item.id" class="btn btn-danger redbtn bg-red my-3 shadow-none " type="submit">
                                    COMPARE
                                </a>
                            </div>
                        </div>
                    </div>
                }
                  
                </div>
        </div>
    </div>
</section>
